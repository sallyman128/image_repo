<h1><%= @user.username %></h1>

<h2>Images</h2>



<% if @user == @current_user && @images.size > 0 %>
  <%= form_tag("/images/destroy_many", method: 'delete' ) do %>
    <table>
      <tbody>
        <% @images.each do |image| %>
          <tr>
            <td><%= check_box_tag("images[]", image.id) %></td>
          </tr>
          <tr>
            <div class="image" style="width:400px; height:auto">
              <td><%= link_to image_tag(image.picture, style:"width:20%"), image_path(image) %></td>
            <div>
          <tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <%= submit_tag "Delete selection", data: {confirm: "Are you sure you want to delete the selected images?"} %>
  <% end %>

  <%= render "/images/form", image: %>
<% else %>
  <table>
    <tbody>
      <% @user.images.each do |image| %>
        <tr>
          <div class="image" style="width:400px; height:auto">
            <td><%= link_to image_tag(image.picture, style:"width:20%"), image_path(image) %></td>
          <div>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to 'Back', images_path %>