<p id="notice"><%= notice %></p>

<h1>Images</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Caption</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <form>
    <tbody>
      <% @images.each do |image| %>
        <tr>
          <td><%= check_box_tag(image.title) %></td>
          <td><%= image.caption %></td>
          <td><%= link_to 'Show', image %></td>
          <td><%= link_to 'Edit', edit_image_path(image) %></td>
        </tr>
      <% end %>
    </tbody>
  </form>
</table>

<br>

<%= link_to "Delete Selected Images", "/images/deletes" %><br>
<%= link_to 'Cancel', images_path %>
