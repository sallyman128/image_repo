<p id="notice"><%= notice %></p>

<h1>Select Images</h1>



<%= form_tag("/images/select", method: 'delete' ) do %>
  <table>

    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Caption</th>
      </tr>
    </thead>

    <tbody>
      <% @images.each do |image| %>
        <tr>
          <td><%= check_box_tag("images[]", image.id) %></td>
          <td><%= image.title %></td>
          <td><%= image.caption %></td>
        </tr>
      <% end %>
    </tbody>

  </table>

  <br>

  <%= submit_tag "Delete selection", data: {confirm: "Are you sure you want to delete the selected images?"} %>
<% end %>

<%= link_to 'Cancel', images_path %>

